: glitch_fill
	vd := 60
	loop
		i := glitch_fill
		i += vd
		va := random 0x7f
		vb := random 0x3f
		sprite va vb 4

		i := audio_phone_ring
		audio_play_sync

		vd += -1
		if vd != 0 then
	again

	return

: glitch_voice
	i := tile_glitch_data
: glitch_voice_next
	va := 50
	vb := 0
	audio_play_stream
	va := 60
	jump sleep
