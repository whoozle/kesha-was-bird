: glitch_fill
	vd := 60
	loop
		v0 := random 0x0f
		v1 := 0xb0
		v0 |= v1
		i := glitch_fill_height
		save v0

		i := glitch_fill
		va := random 0x7f
		vb := random 0x3f

		i += va
		i += vb
		i += v0

:next glitch_fill_height
		sprite va vb 0

		i := long audio_phone_ring
		audio_play_sync

		vd += -1
		if vd != 0 then
	again

	return

: glitch_voice
	i := tile_glitch_data
: glitch_voice_next
	va := 50
	vb := 0
	audio_play_stream
	va := 60
	jump sleep
