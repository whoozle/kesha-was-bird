: splash_draw
	clear
	plane 3
	i := long tile_splash_data

	vb := 0
	vc := 64

	v0 := 0x7f
	v1 := 0x3f

	loop
		va := 0
		loop
			#:breakpoint blit
			sprite va vb 0
			va += 16
			i += vc
			va &= v0
			if va != 0 then
		again
		vb += 16
		vb &= v1
		if vb != 0 then
	again

	va := 24
	vb := 54
	vc := text_title
	draw_text

	loop
		i := long audio_splash_size
		load va - vb
		i := long audio_splash
		audio_play_stream

		v0 := 1
		if v0 -key then
	again

	return
