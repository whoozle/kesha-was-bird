: splash_draw
	clear
	plane 3
	i := long tile_splash_data

	vb := 0
	vc := 64

	loop
		va := 0
		loop
			#:breakpoint blit
			sprite va vb 0
			va += 16
			i += vc
			if va < 128 then
		again
		vb += 16
		if vb < 64 then
	again

	i := long audio_splash_size
	load va - vb
	i := long audio_splash
	audio_play_stream

	va := 24
	vb := 54
	vc := text_title
	draw_text

	vf := key
	return
