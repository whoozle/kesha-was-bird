	dialog_kesha_head_1
	dialog_cow_head

	va := dialog_text_left
	vb := 10
	vc := text_dialog_day_2_1_0
	draw_text

	va := 60 sleep

	va := dialog_text_right
	vb := 24
	vc := text_dialog_day_2_1_1
	draw_text

	va := 30 sleep

	va := dialog_text_right
	vb := 34
	vc := text_dialog_day_2_1_2
	draw_text

	va := 60 sleep

	dialog_kesha_head_1
	dialog_kesha_o_head_1

	va := dialog_head_left
	vb := 48
	vc := text_dialog_day_2_1_3
	draw_text

	va := 30 sleep

	i := audio_phone_tone
	audio_play_sync

	return
