: tile_glitch_data
: sleep
	delay := va
	loop
		vf := delay
		if vf != 0 then
	again
	return

# i = banner address, va, vb, vc == text
: draw_banner
	draw_fullscreen_tile

	vd := va
	sleep_60
	va := vd
	draw_text

	#play short music sample?

	jump sleep_180

: set_flag
	v0 := 1
	save v0
	return

: shake_up_down
	v0 := 60
	loop
		scroll-up 4
		i := ninja_fight
		audio_play_sync
		scroll-down 4
		i := ninja_fight
		audio_play_sync
		v0 += -1
		if v0 != 0 then
	again

	return

: shake_left_right
	v0 := 60
	loop
		scroll-left 4
		i := ninja_fight
		audio_play_sync
		scroll-right 4
		i := ninja_fight
		audio_play_sync
		v0 += -1
		if v0 != 0 then
	again

	return
